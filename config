# ====== Aliases ====== #
 alias ohmyu="source ~/.zshrc"
 alias ohmy="code ~/.zshrc"
 alias ipa="ip a | grep "inet ""
 alias awsiden="code ~/.aws/credentials ~/.aws/config"
